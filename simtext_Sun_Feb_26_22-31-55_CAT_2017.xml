<?xml version="1.0" encoding="UTF-8"?>
<project name="simtext" default="all">
  
  
  <property file="simtext.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-32.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.kotlinjavaruntime.classpath">
    <pathelement location="${basedir}/lib/kotlin-reflect.jar"/>
    <pathelement location="${basedir}/lib/kotlin-runtime.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <path id="library.com.nhaarman:mockito-kotlin:1.3.0.classpath">
    <pathelement location="C:/Coding/Libraries/byte-buddy-1.6.5.jar"/>
    <pathelement location="C:/Coding/Libraries/byte-buddy-agent-1.6.5.jar"/>
    <pathelement location="C:/Coding/Libraries/kotlin-reflect-1.0.6.jar"/>
    <pathelement location="C:/Coding/Libraries/kotlin-runtime-1.0.6.jar"/>
    <pathelement location="C:/Coding/Libraries/kotlin-stdlib-1.0.6.jar"/>
    <pathelement location="C:/Coding/Libraries/mockito-core-2.7.5.jar"/>
    <pathelement location="C:/Coding/Libraries/mockito-kotlin-1.3.0.jar"/>
    <pathelement location="C:/Coding/Libraries/objenesis-2.5.jar"/>
  </path>
  
  <path id="library.org.mockito:mockito-core:2.7.9.classpath">
    <pathelement location="C:/Coding/Libraries/byte-buddy-1.6.5.jar"/>
    <pathelement location="C:/Coding/Libraries/byte-buddy-agent-1.6.5.jar"/>
    <pathelement location="C:/Coding/Libraries/mockito-core-2.7.9.jar"/>
    <pathelement location="C:/Coding/Libraries/objenesis-2.5.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Simtext -->
  
  <dirname property="module.simtext.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.simtext" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.simtext" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.simtext" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.simtext" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="simtext.output.dir" value="${module.simtext.basedir}/bin"/>
  <property name="simtext.testoutput.dir" value="${module.simtext.basedir}/bin"/>
  
  <path id="simtext.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="simtext.module.production.classpath">
    <path refid="${module.jdk.classpath.simtext}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M3.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M1.jar"/>
    <path refid="library.org.mockito:mockito-core:2.7.9.classpath"/>
    <path refid="library.com.nhaarman:mockito-kotlin:1.3.0.classpath"/>
  </path>
  
  <path id="simtext.runtime.production.module.classpath">
    <pathelement location="${simtext.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M3.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M1.jar"/>
    <path refid="library.org.mockito:mockito-core:2.7.9.classpath"/>
    <path refid="library.com.nhaarman:mockito-kotlin:1.3.0.classpath"/>
  </path>
  
  <path id="simtext.module.classpath">
    <pathelement location="${simtext.output.dir}"/>
    <path refid="${module.jdk.classpath.simtext}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M3.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M1.jar"/>
    <path refid="library.org.mockito:mockito-core:2.7.9.classpath"/>
    <path refid="library.com.nhaarman:mockito-kotlin:1.3.0.classpath"/>
  </path>
  
  <path id="simtext.runtime.module.classpath">
    <pathelement location="${simtext.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M3.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M1.jar"/>
    <path refid="library.org.mockito:mockito-core:2.7.9.classpath"/>
    <path refid="library.com.nhaarman:mockito-kotlin:1.3.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.simtext">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.simtext">
    <patternset refid="excluded.from.module.simtext"/>
  </patternset>
  
  <path id="simtext.module.sourcepath">
    <dirset dir="${module.simtext.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.simtext" depends="compile.module.simtext.production,compile.module.simtext.tests" description="Compile module Simtext"/>
  
  <target name="compile.module.simtext.production" depends="register.custom.compilers" description="Compile module Simtext; production classes">
    <mkdir dir="${simtext.output.dir}"/>
    <javac2 destdir="${simtext.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.simtext}/javac">
      <compilerarg line="${compiler.args.simtext}"/>
      <bootclasspath refid="simtext.module.bootclasspath"/>
      <classpath refid="simtext.module.production.classpath"/>
      <src refid="simtext.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.simtext"/>
    </javac2>
    
    <copy todir="${simtext.output.dir}">
      <fileset dir="${module.simtext.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.simtext.tests" depends="register.custom.compilers,compile.module.simtext.production" description="compile module Simtext; test classes" unless="skip.tests"/>
  
  <target name="clean.module.simtext" description="cleanup module">
    <delete dir="${simtext.output.dir}"/>
    <delete dir="${simtext.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.simtext" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.simtext" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.simtext:jar" value="${basedir}/../SimtextRunnable/Simtext_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Simtext.jar" value="${artifacts.temp.dir}/Simtext.jar"/>
  </target>
  
  <target name="artifact.simtext:jar" depends="init.artifacts, compile.module.simtext" description="Build &#39;Simtext:jar&#39; artifact">
    <property name="artifact.temp.output.simtext:jar" value="${artifacts.temp.dir}/Simtext_jar"/>
    <mkdir dir="${artifact.temp.output.simtext:jar}"/>
    <jar destfile="${temp.jar.path.Simtext.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/../SimtextRunnable/src/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${simtext.output.dir}"/>
      <zipfileset src="${basedir}/../Libraries/mockito-core-2.7.9.jar"/>
      <zipfileset src="${basedir}/../Libraries/byte-buddy-1.6.5.jar"/>
      <zipfileset src="${basedir}/../Libraries/byte-buddy-agent-1.6.5.jar"/>
      <zipfileset src="${basedir}/../Libraries/objenesis-2.5.jar"/>
      <zipfileset src="${basedir}/../Libraries/mockito-kotlin-1.3.0.jar"/>
      <zipfileset src="${basedir}/../Libraries/kotlin-stdlib-1.0.6.jar"/>
      <zipfileset src="${basedir}/../Libraries/kotlin-runtime-1.0.6.jar"/>
      <zipfileset src="${basedir}/../Libraries/kotlin-reflect-1.0.6.jar"/>
      <zipfileset src="${basedir}/../Libraries/mockito-core-2.7.5.jar"/>
      <zipfileset src="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M3.jar"/>
      <zipfileset src="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M1.jar"/>
      <zipfileset src="${idea.home}/lib/junit-4.12.jar"/>
      <zipfileset src="${basedir}/lib/kotlin-runtime.jar"/>
      <zipfileset src="${basedir}/lib/kotlin-reflect.jar"/>
    </jar>
    <copy file="${temp.jar.path.Simtext.jar}" tofile="${artifact.temp.output.simtext:jar}/Simtext.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.simtext:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.simtext:jar}"/>
    <copy todir="${artifact.output.simtext:jar}">
      <fileset dir="${artifact.temp.output.simtext:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>